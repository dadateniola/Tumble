<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/FontAwesome/css/all.min.css">
    <link rel="stylesheet" href="/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" href="/styles/common.css">
    <link rel="stylesheet" href="/styles/login-register.css">
    <link rel="stylesheet" href="/styles/media-queries.css">
    <title>Login</title>
</head>

<body>
    <div class="content">
        <%- include('partials/alert') %>
        <div class="content-bg">
            <video src="/videos/tree.mp4" autoplay loop muted></video>
        </div>
        <div class="content-overlay"></div>
        <div class="content-box">
            <div class="cont">
                <div class="head">
                    <h1>Sign In</h1>
                    <a href="/" class="backHome">Home</a>
                </div>
                <div class="form-box">
                    <form action="/login" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" placeholder="Enter email" name="email" id="email">
                        </div>
                        <div class="mb-3 form-group">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" placeholder="Enter password" name="password"
                                id="password">
                        </div>
                        <div class="mb-3 form-group d-flex justify-content-end">
                            <a href="#">forgot password?</a>
                        </div>
                        <div class="form-group">
                            <button class="loginBtn" type="submit">LOGIN</button>
                        </div>
                    </form>
                    <div class="or-box">
                        <p class="or">or</p>
                        <div class="icons">
                            <div class="icon">
                                <i class="fa-brands fa-facebook"></i>
                            </div>
                            <div class="icon">
                                <i class="fa-brands fa-google"></i>
                            </div>
                            <div class="icon">
                                <i class="fa-brands fa-twitter"></i>
                            </div>
                        </div>
                        <p>Dont have an account?, <a href="/register">Create An Account</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="/scripts/common.js"></script>
<%- include('partials/formValidator') %>

</html>