<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/owl carouel/owl.carousel.min.css">
    <link rel="stylesheet" href="/FontAwesome/css/all.min.css">
    <link rel="stylesheet" href="/styles/common.css">
    <link rel="stylesheet" href="/styles/home-page.css">
    <link rel="stylesheet" href="/styles/media-queries.css">
    <title>Tumble</title>
</head>

<body class="tumble">

    <%- include('partials/menu') %>
        <div class="tumble-content">
            <%- include('partials/top-nav.ejs') %>
            <%- include('partials/alert') %>
                <div class="hero">
                    <% if (topVideos.length) { %>
                        <% for( let i = 0; i < topVideos.length; i++ ) { %>
                            <div class="hero-box">
                                <img src="/placeholder/<%= topVideos[i].placeholder %>" id="hero-box-img">
                                <div class="hero-overlay"></div>
                                <div class="hero-sub img-here">
                                    <% for( let j = 0; j < users.length; j++ ) { %>
                                        <% if (users[j].id == topVideos[i].user_id) { %>
                                            <a href="/channel/@<%= users[j].username %>"><img src="/photo/<%= users[j].photo %>" alt="<%= users[j] %>"></a>
                                            <% break; %>
                                        <% } %>
                                    <% } %>
                                </div>
                                <div class="hero-text">
                                    <h1><%= topVideos[i].description %></h1>
                                    <a href="/feed/videos/<%= topVideos[i].path %>">Watch</a>
                                    <a href="/"><i class="fa-solid fa-plus"></i></a>
                                </div>
                            </div>
                        <% } %>
                    <% } %>
                    <div class="hero-slider"></div>
                </div>

                <% if (videos.length) { %>
                    <div class="category">
                        <h1>Recommended for you</h1>
                    </div>
                    <div class="recommended-cont">
                        <div class="owl-carousel owl-recommended">
                            <% for( let i = 0; i < videos.length; i++ ) { %>
                                <div class="recommended">
                                    <div class="recommended-img">
                                        <a href="/feed/videos/<%= videos[i].path %>"><img src="/placeholder/<%= videos[i].placeholder %>"></a>
                                    </div>
                                    <div class="recommended-details">
                                        <div class="recommended-avatar img-here">
                                            <% for( let j = 0; j < users.length; j++ ) { %>
                                                <% if (users[j].id == videos[i].user_id) { %>
                                                    <% var username = users[j].username %>
                                                    <a href="/channel/@<%= users[j].username %>"><img src="/photo/<%= users[j].photo %>" alt="<%= users[j] %>"></a>
                                                    <% break; %>
                                                <% } %>
                                            <% } %>
                                        </div>
                                        <div class="recommended-text">
                                            <a href="/feed/videos/<%= videos[i].path %>">
                                                <h1><%= videos[i].description %></h1>
                                            </a>
                                            <a href="/channel/@<%= username %>">
                                                <p><%= username %></p>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% } %>

                <% if (shorts.length) { %>
                    <div class="category">
                        <h1>Shorts</h1>
                    </div>
    
                    <div class="short-cont">
                        <div class="owl-carousel owl-short">
                            <% for( let i = 0; i < shorts.length; i++ ) { %>
                                <div class="short">
                                    <div class="short-img">
                                        <a href="/feed/shorts/<%= shorts[i].path %>"><img src="/placeholder/<%= shorts[i].placeholder %>"></a> 
                                    </div>
                                    <br>
                                    <a href="/feed/shorts/<%= shorts[i].path %>">
                                        <h1><%= shorts[i].description %></h1>
                                    </a>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% } %>

                <div class="line"></div>

                <div class="videos-box">

                </div>
        </div>
        </div>

</body>
<script src="/owl carouel/jquery-3.6.0.min.js"></script>
<script src="/owl carouel/owl.carousel.min.js"></script>
<script src="/scripts/common.js"></script>
<script src="/scripts/home-page.js"></script>

</html>